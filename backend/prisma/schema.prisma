generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN_HR
  KARYAWAN
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  role     Role   @default(KARYAWAN)

  position   String? // dropdown statis (frontend)
  department String? // dropdown statis (frontend)

  presensis Presensi[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([role])
}

model Presensi {
  id String @id @default(uuid())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  checkInWaktu DateTime @default(now())

  checkInPhotoUrl   String? // path file upload check-in
  checkInKeterangan String? // optional note check-in

  checkOutWaktu      DateTime?
  checkOutPhotoUrl   String?
  checkOutKeterangan String?

  createdAt DateTime @default(now())

  @@unique([userId, checkInWaktu])
  @@index([userId])
  @@index([checkInWaktu])
}
