generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN_HR
  KARYAWAN
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  role     Role   @default(KARYAWAN)

  position   String? // dropdown statis (frontend)
  department String? // dropdown statis (frontend)

  presensis Presensi[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([role])
}

model Presensi {
  id String @id @default(uuid())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  tanggal DateTime @default(now())

  photoUrl   String? // path file upload
  keterangan String? // optional note

  createdAt DateTime @default(now())

  @@unique([userId, tanggal])
  @@index([userId])
  @@index([tanggal])
}
